icons-item() {
	display: flex;
	flex-flow: row wrap;
	justify-content: center;
	li {
		width: 280px;
		height: 190px;
		margin: 15px 13px;
		background-color: #fff;
		box-shadow: 0 2px 10px 0 rgba(0, 0, 0, 0.1);
		border-radius: 5px;
		overflow: hidden;
		position: relative;
		&:hover {
			a::after {
				opacity: 1;
			}
		}
		a::after {
			content: '';
			position: absolute;
			width: 100%;
			height: 100%;
			left: 0;
			top: 0;
			background-color: rgba(214, 214, 214, 0.3);
			opacity: 0;
			transition: all 0.2s;
		}
		.img {
			width: 100%;
			height: 160px;
			position: relative;
			overflow: hidden;
			.img-cover {
				width: 100%;
				height: 100%;
			}
			.img-array {
				position: absolute;
				left: 0px;
				top: 0px;
				width: 100%;
				height: 100%;
				display: none;
				img {
					position: absolute;
					height: 100%;
					left: 50%;
					transform: translateX(-50%);
					top: 0px;
					opacity: 0;
					transition: opacity 0.5s ease;
					&.active {
						opacity: 1;
						// transition opacity .5s ease 0s
					}
				}
			}
		}
		.con {
			padding: 0 15px;
			line-height: 1.8;
			.title {
				text_ovh(75%);
				display: inline-block;
			}
			span {
				em {
					color: #ccc;
					i {
						font-size: 12px;
						color: #ccc;
						margin-right: 5px;
					}
					&.icon-vip2 {
						margin-left: 5px;
						font-size: 12px;
					}
				}
			}
		}
	}
}