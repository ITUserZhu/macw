.login-mask {
	position: fixed;
	width: 100%;
	height: 100%;
	left: 0px;
	top: 0px;
	background-color: rgba(0, 0, 0, 0.6);
	z-index: 100;
	.login-outer {
		position: absolute;
		width: 350px;
		height: 500px;
		left: 50%;
		top: 50%;
		margin: -250px 0 0 -175px;
		border-radius: 10px;
		padding: 40px;
		overflow: hidden;
		background-color: #fff;
		box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.2);
		.round-bg i {
			position: absolute;
			border-radius: 50%;
			background-color: #a0a0a0;
			&:nth-child(1) {
				width: 220px;
				height: 220px;
				top: -70px;
				left: -60px;
				z-index: 2;
			}
			&:nth-child(2) {
				width: 160px;
				height: 160px;
				background-color: theme_color;
				left: -65px;
				top: 70px;
			}
			&:nth-child(3) {
				width: 150px;
				height: 150px;
				top: -25px;
				right: -75px;
			}
			&:nth-child(4) {
				width: 190px;
				height: 190px;
				top: 210px;
				right: -100px;
			}
			&:nth-child(5) {
				width: 120px;
				height: 120px;
				background-color: theme_color;
				bottom: -20px;
				left: -20px;
			}
			&:nth-child(6) {
				width: 100px;
				height: 100px;
				bottom: 60px;
				right: -50px;
				z-index: 2;
				background-color: theme_color;
			}
		}
		.login-close {
			position: absolute;
			z-index: 2;
			width: 30px;
			height: 30px;
			color: #fff;
			cursor: pointer;
			right: 0px;
			top: 0px;
			text-align: center;
			line-height: 30px;
		}
		.login-main {
			width: 100%;
			height: 100%;
			padding: 10px 30px;
			background-color: rgba(255, 255, 255, 0.8);
			box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1);
			position: relative;
			z-index: 3;
			hgroup {
				display: flex;
				justify-content: space-between;
				line-height: 42px;
				span {
					color: #999;
					font-size: 16px;
					cursor: pointer;
					&.active {
						font-size: 24px;
						color: #333;
					}
				}
			}
			.login-forms {
				form {
					display: none;
					margin-top: 10px;
					&.active {
						display: block;
					}
					&.form-login {
						fieldset {
							position: relative;
							i {
								position: absolute;
								left: 8px;
								color: #999;
								top: 50%;
								font-size: 16px;
								margin-top: -4px;
							}
							input {
								padding-left: 30px;
								margin-top: 10px;
							}
						}
						.check-forgot {
							color: #666;
							float: right;
							cursor: pointer;
							margin-top: 15px;
							margin-bottom: 10px;
						}
					}
					input {
						line-height: 40px;
						border-bottom: 1px solid #eaeaea;
						padding: 0 10px;
						width: 100%;
						&.note-ipt {
							width: 110px;
						}
						&:placeholder {
							color: #999;
						}
					}
					button {
						width: 100%;
						height: 40px;
						border-radius: 20px;
						color: #fff;
						font-size: 16px;
						background-color: theme_color;
						margin-top: 20px;
						cursor: pointer;
					}
					.get-note {
						display: block;
						float: right;
						width: 100px;
						height: 30px;
						line-height: 30px;
						color: #fff;
						text-align: center;
						background-color: #ddd;
						font-size: 12px;
						margin-top: 5px;
						cursor: no-drop;
						&.active {
							cursor: pointer;
							background-color: theme_color;
						}
					}
				}
			}
			.login-tip {
				text-align: center;
				font-size: 12px;
				color: red;
				margin-top: 5px;
			}
			.login-third {
				position: absolute;
				bottom: 10px;
				left: 30px;
				right: 30px;
				height: 90px;
				.third-type {
					line-height: 20px;
					color: #999;
					position: relative;
					&::after {
						content: '';
						position: absolute;
						width: 160px;
						height: 1px;
						background-color: #ddd;
						top: 10px;
						left: 50%;
						margin-left: -80px;
					}
					span {
						display: none;
						width: 80px;
						height: 20px;
						margin: -10px auto;
						background-color: #fff;
						text-align: center;
						position: relative;
						z-index: 2;
						&.active {
							display: block;
						}
					}
				}
				.third-login {
					display: flex;
					justify-content: space-between;
					margin-top: 20px;
					div {
						text-align: center;
						cursor: pointer;
						margin: 0 15px;
						&.third-qq span {
							background-color: #1DBCF4;
						}
						&.third-wx span {
							background-color: #18C248;
						}
						span {
							display: inline-block;
							width: 40px;
							height: 40px;
							line-height: 40px;
							border-radius: 50%;
							i {
								color: #fff;
								line-height: 40px;
								font-size: 22px;
							}
						}
						p {
							line-height: 20px;
							color: #666;
						}
					}
				}
			}
		}
	}
}