// 初始标签
html {
    border-collapse: collapse;
    line-height: 1.6;
    font-family: sans-serif;
}

* {
    margin: 0;
    padding: 0;
    border-collapse: inherit;
    font-style: normal;
    box-sizing: border-box;
}

*:not(body) {
    background-repeat: no-repeat;
    background-position: 50%;
    background-size: cover;
}

body {
    position: relative;
}

[hidden] {
    display: none !important;
}

ul, ol, menu {
    list-style: none;
}

a, a:hover {
    color: #333;
    text-decoration: none;
    cursor: pointer;
}

h1, h2, h3, h4, h5, h6 {
    font-weight: normal;
}

fieldset {
    border: none;
}

button, input, textarea {
    outline: none;
    border: none;
    background-color: transparent;
}

button {
    cursor: pointer;
}

input[type=number] {
    -moz-appearance: textfield;
}

input[type=number]::-webkit-inner-spin-button, input[type=number]::-webkit-outer-spin-button {
    margin: 0;
    -webkit-appearance: none;
}

// 通用类名
.fr {
    float: right;
}

.fl {
    float: left;
}

.clearfix::before, .clearfix::after {
    content: '';
    zoom: 1;
    visibility: hidden;
    display: block;
    clear: both;
}

// 方法与变量
theme_color = #333;
head_color = #fff;
theme_bg = #fff;

text_ovh(w = 100%) {
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: w;
}

filter-blur(size = 40px, w = 100%) {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0px;
    top: 0px;
    overflow: hidden;
    img {
        width: w;
        height: 100%;
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        filter: blur(size);
    }
}