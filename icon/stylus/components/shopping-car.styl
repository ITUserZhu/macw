@import 'components/hasicons';

.shopping-car {
	position: fixed;
	z-index: 98;
	left: 0;
	top: 80px;
	background-color: #fff;
	width: 100%;
	height: calc(100% - 80px);
	border-top: 1px solid #eee;
	transform: translate3d(100%, 0, 0);
	transition: transform 0.4s;
	&.active {
		transform: translate3d(0, 0, 0);
	}
	.shopping-box {
		height: calc(100% - 110px);
		position: relative;
		.shop-out {
			&.left {
				position: absolute;
				cursor: pointer;
				left: 0;
				top: 50%;
				transform: rotate(-90deg);
			}
			&.right {
				position: absolute;
				right: 30px;
				top: 0px;
				width: 50px;
				height: 50px;
				text-align: center;
				line-height: 50px;
				color: #666;
				cursor: pointer;
				font-size: 16px;
			}
		}
	}
	.shop-container {
		max-width: 1300px;
		padding: 0 50px;
		margin: 0 auto;
		height: 100%;
		.shop-top {
			display: flex;
			line-height: 40px;
			margin-top: 10px;
			& > div {
				cursor: pointer;
				margin-right: 30px;
				color: #999;
			}
		}
		.shop-out {
			line-height: 40px;
			color: #999;
			cursor: pointer;
			span {
				display: inline-block;
				margin-left: 5px;
			}
		}
		.shop-nav {
			line-height: 60px;
			height: 60px;
			border-bottom: 1px solid #eee;
			font-size: 0;
			div {
				height: 100%;
			}
			span {
				text_ovh();
				max-width: 100px;
				font-size: 14px;
				color: #999;
				display: inline-block;
				margin-right: 50px;
				cursor: pointer;
				&.active {
					color: theme_color;
					font-size: 18px;
				}
			}
		}
		.shop-wraps {
			height: calc(100% - 100px);
			overflow-y: auto;
			padding: 20px 0;
			&::-webkit-scrollbar-track {
				background-color: #eee;
			}
			&::-webkit-scrollbar {
				width: 4px;
				background-color: #eee;
			}
			&::-webkit-scrollbar-thumb {
				background-color: theme_color;
			}
			ul {
				icons();
				li .mask {
					.operate {
						background-color: #F4F4F4;
						i {
							font-size: 18px;
							color: #999;
							line-height: 30px;
						}
					}
				}
			}
		}
	}
	.shopping-bot {
		height: 100px;
		padding: 30px 0;
		border-top: 2px solid #eee;
		.shop-operate {
			max-width: 1300px;
			margin: 0 auto;
			padding: 0 50px;
			.shop-empty {
				height: 40px;
				cursor: pointer;
				font-size: 16px;
				i {
					margin-right: 5px;
				}
			}
			.shop-down {
				span {
					em {
						color: theme_color;
					}
				}
				.shop-download {
					width: 200px;
					height: 40px;
					border-radius: 5px;
					color: #fff;
					font-size: 16px;
					background-color: theme_color;
					margin-left: 30px;
				}
			}
		}
	}
}

.shop-form {
	label {
		display: block;
		font-weight: bold;
	}
	input {
		width: 100%;
		height: 34px;
		padding: 0 10px;
		margin-top: 6px;
		border: 1px solid #eee;
		color: #666666;
		border-radius: 4px;
		box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
	}
}

.shop-type-choose {
	label {
		display: block;
		width: 80%;
		margin: 10px auto 0;
		line-height: 30px;
		border-radius: 5px;
		color: #fff;
		cursor: pointer;
		text-align: center;
		background-color: theme_color;
		opacity: 0.5;
		&:hover {
			opacity: 1;
		}
		&.active {
			opacity: 1;
		}
		input {
			opacity: 0;
		}
	}
}
