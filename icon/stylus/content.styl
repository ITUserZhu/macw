@import 'components/common';
@import 'components/hasicons';
@import 'components/edit-icon';
@import 'media/content';

main.main-content {
	max-width: 1200px;
	margin: 0 auto;
}

.new-operate {
	height: 50px;
	line-height: 50px;
	display: none;
	span {
		float: right;
		font-size: 20px;
		width: 35px;
		height: 35px;
		line-height: 35px;
		text-align: center;
		border-radius: 20px;
		border: 1px solid #eeeeee;
		background-color: #fff;
		overflow: hidden;
		position: relative;
		cursor: pointer;
		&::after {
			content: '';
			display: block;
			background-color: theme_color;
			position: absolute;
			z-index: 0;
			left: 0;
			top: 100%;
			right: 0;
			bottom: 0;
			border-radius: 50%;
			transition: all 0.2s cubic-bezier(0.215, 0.62, 0.355, 1);
		}
		&:hover {
			em {
				color: #fff;
			}
			&::after {
				top: 0;
			}
		}
		em {
			position: relative;
			z-index: 2;
			transition: all 0.2s cubic-bezier(0.215, 0.62, 0.355, 1);
		}
	}
	a {
		float: left;
		width: 140px;
		height: 35px;
		line-height: 35px;
		border: 1px solid #eee;
		text-align: center;
		overflow: hidden;
		position: relative;
		border-radius: 20px;
		&::after {
			content: '';
			display: block;
			background-color: theme_color;
			position: absolute;
			z-index: 0;
			left: 0;
			top: 100%;
			right: 0;
			bottom: 0;
			transition: all 0.2s cubic-bezier(0.215, 0.62, 0.355, 1);
		}
		&:hover {
			em {
				color: #fff;
			}
			&::after {
				top: 0;
			}
		}
		em {
			position: relative;
			z-index: 2;
			transition: all 0.2s cubic-bezier(0.215, 0.62, 0.355, 1);
		}
	}
}

#detail-content {
	.new-operate {
		display: block;
	}
}

section {
	&.icons-content {
		height: 450px;
		.icons-preview {
			width: 620px;
			height: 100%;
			box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1);
			padding: 20px 0;
			margin-right: 40px;
			.other-shows {
				width: 110px;
				height: 380px;
				border-right: 1px solid #eee;
				overflow-y: auto;
				padding: 0 30px;
				&::-webkit-scrollbar-track {
					background-color: #eee;
				}
				&::-webkit-scrollbar {
					width: 1px;
					background-color: #eee;
				}
				&::-webkit-scrollbar-thumb {
					background-color: theme_color;
				}
				li {
					width: 100%;
					height: 50px;
					overflow: hidden;
					margin-top: 30px;
					&:first-child {
						margin-top: 0;
					}
					img {
						margin-left: 50%;
						transform: translateX(-50%);
						height: 100%;
					}
				}
			}
			.preview-content {
				height: 100%;
				overflow: hidden;
				position: relative;
				.icons-styles {
					display: flex;
					justify-content: center;
					li {
						width: 40px;
						height: 40px;
						padding: 4px;
						border: 1px solid transparent;
						margin: 0 5px;
						&.active {
							border-color: theme_color;
						}
						img {
							height: 100%;
							margin-left: 50%;
							transform: translateX(-50%);
						}
					}
				}
				.icons-img {
					width: 256px;
					height: 256px;
					margin: 55px auto 0;
					img {
						height: 100%;
						margin-left: 50%;
						transform: translateX(-50%);
					}
				}
				.col-edit {
					position: absolute;
					width: 40px;
					right: 20px;
					bottom: 0px;
					span {
						cursor: pointer;
						display: block;
						width: 40px;
						height: 40px;
						border-radius: 50%;
						border: 1px solid #999999;
						text-align: center;
						line-height: 40px;
						margin-bottom: 10px;
						&.active {
							background-color: rgba(79, 186, 254, 0.3);
						}
						i {
							font-size: 18px;
							color: #999;
						}
					}
				}
			}
		}
		.info-operate {
			overflow: hidden;
			height: 450px;
			.info-title {
				font-size: 18px;
				line-height: 2;
				margin: 20px 0 5px;
				h1 {
					display: inline-block;
					font-size: 18px;
					margin-right: 5px;
				}
				span {
					i {
						margin-left: 10px;
					}
					.icon-forsell {
						color: #16C985;
					}
				}
			}
			.info-more {
				line-height: 2;
				color: #999;
				span {
					margin-right: 15px;
					* {
						color: #333;
					}
				}
			}
			.content-download {
				display: flex;
				justify-content: center;
				flex-flow: row wrap;
				margin-top: 15px;
				li {
					flex: 1;
					min-width: 70px;
					max-width: 140px;
					text-align: center;
					height: 50px;
					line-height: 50px;
					cursor: pointer;
					border-radius: 5px;
					margin: 10px;
					position: relative;
					color: #666;
					border: 1px solid #eee;
					&:nth-child(-n+2) {
						background-color: theme_color;
						color: #fff;
						flex: 50%;
						max-width: 220px;
					}
					&:last-child {
						min-width: 110px;
						border: 1px solid #9B9B9B;
						background-color: transparent;
						color: #999;
					}
					&.more-size {
						padding-right: 80px;
						&.ico {
							min-width: 150px;
							.size {
								background-color: #ccc;
								.size-wrap {
									background-color: #ccc;
								}
								p {
									&:hover {
										background-color: #ddd;
									}
								}
							}
						}
						.size {
							position: absolute;
							right: 0;
							top: 0;
							width: 80px;
							height: 100%;
							background-color: #222;
							color: #ffffff;
							border-radius: 0 5px 5px 0;
							&::after {
								content: '>';
								position: absolute;
								right: 5px;
								top: 16px;
								transform: rotate(90deg);
								line-height: normal;
							}
							&.active {
								.size-wrap {
									display: block;
								}
							}
							input {
								width: 100%;
								height: 100%;
								padding-left: 30px;
								padding-right: 15px;
								color: #fff;
							}
							.size-wrap {
								position: absolute;
								top: 50px;
								left: 0;
								width: 100%;
								z-index: 9;
								background-color: #222;
								color: #fff;
								box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.1);
								border-radius: 0 0 5px 5px;
								display: none;
							}
							p {
								margin: 0;
								color: #fff;
								font-size: 14px;
								line-height: 34px;
								&.active {
									display: block;
								}
								&:hover {
									background-color: #444;
								}
							}
						}
					}
					em {
						font-size: 22px;
						vertical-align: text-bottom;
						margin-right: 5px;
					}
				}
			}
			.other-operate {
				margin: 20px 0;
				a {
					em {
						color: red;
					}
				}
				span {
					text-decoration: underline;
					color: theme_color;
					cursor: pointer;
					margin-left: 20px;
				}
			}
			.keybord-tips {
				color: #999;
				span {
					margin-right: 10px;
					i {
						display: inline-block;
						margin-right: 5px;
						width: 20px;
						height: 16px;
						padding: 0 2px;
						line-height: 16px;
						text-align: center;
						border: 1px solid #9A9A9A;
					}
				}
			}
			.content-keywords {
				margin-top: 15px;
				a {
					display: inline-block;
					padding: 2px 10px;
					margin: 5px 4px;
					background-color: #EBF8FE;
					color: #999;
					border-radius: 3px;
				}
			}
		}
	}
	&.sec-rel {
		margin-top: 20px;
		h2 {
			font-size: 18px;
			border-bottom: 1px solid #DEDEDE;
			line-height: 60px;
			position: relative;
			&::after {
				content: '';
				position: absolute;
				width: 120px;
				height: 2px;
				background-color: theme_color;
				bottom: -1px;
				left: 0;
			}
		}
		ul.hasicons {
			icons();
			margin: 20px 0;
		}
	}
}

.downleft {
	p {
		line-height: 50px;
		font-size: 18px;
		em {
			color: theme_color;
			font-size: 24px;
			margin: 0 5px;
		}
	}
	span {
		font-size: 15px;
		a {
			color: #999;
		}
	}
}

#detail-overlay {
	position: fixed;
	left: 0;
	top: 0px;
	overflow: hidden;
	display: none;
	width: 100%;
	height: 0;
	background-color: rgba(0, 0, 0, 0.5);
	z-index: 99;
	&.loading {
		display: block;
		height: 100%;
		#detail-loading {
			display: block;
		}
	}
	&.ready {
		display: block;
		height: 100%;
		#detail-loading {
			display: none;
		}
		#detail-content {
			opacity: 1;
		}
		&.loading {
			#detail-loading {
				display: block;
				z-index: 3;
				border-color: theme_color;
				border-right-color: transparent;
			}
			#detail-content {
				filter: blur(2px);
			}
		}
	}
	#detail-close {
		position: fixed;
		display: none;
		top: 0px;
		right: 4em;
		width: 64px;
		height: 64px;
		z-index: 3;
		background-color: transparent;
		outline: none;
		border: none;
		cursor: pointer;
		&::after {
			content: '\d7';
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			color: #fff;
			font-size: 44px;
		}
	}
}

#detail-wrapper {
	position: relative;
	overflow-x: hidden;
	overflow-y: scroll;
	width: 100%;
	height: 100%;
	z-index: 2;
}

#detail-content {
	transition: all 0.25s linear;
	opacity: 0;
	background-color: #fff;
	position: relative;
	margin: 20px auto;
	width: 100%;
	max-width: 1200px;
	border-radius: 10px;
	padding: 30px;
}

#detail-loading {
	animation: circle 0.8s infinite linear;
	border: 3px solid #fff;
	border-radius: 100%;
	display: inline-block;
	overflow: hidden;
	text-indent: -999px;
	vertical-align: middle;
	border-right-color: transparent;
	width: 120px;
	height: 120px;
	position: fixed;
	top: 50%;
	left: 50%;
	margin-left: -60px;
	margin-top: -60px;
	display: none;
}

@keyframes circle {
	0% {
		transform: rotate(0);
	}
	100% {
		transform: rotate(360deg);
	}
}