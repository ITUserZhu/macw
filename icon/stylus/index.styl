@import 'components/common';
@import 'components/icons-item';
@import 'media/index';

header {
  .head .head-other .other-search {
    display: none;
  }
}

.sec-banner {
  height: 300px;
  background-image: url('/assets/images/newbg.png');
  background-repeat: repeat;
  background-size: auto;
  background-color: rgba(243, 243, 243, 0.6);
  .banner-wrap {
    max-width: 1200px;
    padding: 60px 0 55px;
    margin: 0 auto;
    .banner-tips {
      max-width: 400px;
      .icon-number {
        font-size: 30px;
        line-height: 70px;
      }
      .icon-format {
        line-height: 28px;
        font-size: 16px;
        color: #999;
      }
    }
    .banner-form {
      width: 600px;
      height: 50px;
      margin-top: 30px;
      form {
        width: 100%;
        height: 50px;
        position: relative;
        font-size: 0;
        border-radius: 5px;
        border: 1px solid #eee;
        input {
          width: 100%;
          height: 100%;
          background-color: #fff;
          border-radius: 5px;
          padding: 0 70px 0 20px;
          font-size: 16px;
          &::placeholder {
            color: #999999;
          }
        }
        button {
          position: absolute;
          width: 70px;
          height: 100%;
          right: 0;
          top: 0;
          i {
            font-size: 26px;
            color: #333;
          }
        }
      }
      .hot-search {
        line-height: 25px;
        margin: 10px;
        cursor: default;
        color: #666;
        a {
          color: #333;
          margin-left: 10px;
          transition: all 0.2s;
        }
      }
    }
  }
  .icons-style {
    max-width: 1200px;
    height: 120px;
    margin: 0 auto;
    border: 1px solid #ddd;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    li {
      flex: 1;
      text-align: center;
      padding: 28px 0;
      div {
        img {
          width: 30px;
        }
      }
      p {
        font-size: 16px;
        line-height: 36px;
      }
    }
  }
}

.sec-icons {
  margin-top: 100px;
  hgroup {
    text-align: center;
    margin-bottom: 15px;
    h3 {
      display: inline-block;
      font-size: 20px;
      line-height: 60px;
      margin: 0 40px;
      position: relative;
      cursor: pointer;
      color: #999;
      &.active {
        font-size: 24px;
        color: #333;
        &::after {
          display: block;
        }
      }
      &::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        margin-left: -20px;
        width: 40px;
        height: 3px;
        background-color: #fff;
        display: none;
      }
    }
  }
  .icon-items {
    max-width: 1230px;
    margin: 0 auto;
    ul {
      icons-item();
      display: none;
      &.active {
        display: flex;
      }
    }
  }
  .pack-more {
    width: 74px;
    height: 32px;
    position: relative;
    margin: 30px auto;
    border-top: 1px solid theme_color;
    border-bottom: 1px solid theme_color;
    text-align: center;
    line-height: 32px;
    &:hover {
      a {
        background-color: theme_color;
        color: #fff;
      }
    }
    &::after, &::before {
      content: '';
      position: absolute;
      top: -6px;
      height: 44px;
      width: 1px;
      background-color: theme_color;
    }
    &::after {
      left: 6px;
    }
    &::before {
      right: 6px;
    }
    a {
      display: none;
      height: 100%;
      font-size: 16px;
      color: theme_color;
      margin: 0 6px;
      transition: all 0.2s;
      &.active {
        display: block;
      }
    }
  }
}
