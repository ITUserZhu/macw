@media screen and (max-width: 1200px) 
    main 
        section.icons-content 
            height auto
            .icons-preview
                float none
                margin 0 auto
            .info-operate
                height auto
                width 100%
                padding 0 50px
                text-align center
                overflow visible
        section.sec-rel
            margin 0 20px
    #detail-overlay #detail-content
        max-width 1000px

@media screen and (max-width: 1000px) 
    #detail-overlay 
        #detail-content
            border-radius 0px
            overflow hidden
            margin 0
        #detail-navbar
            position absolute
            top 0px
            left 0px
            width 100%
            height 44px 
            background-color #222222
            z-index 999
            display none
        #detail-close
            top 0px
            left 0px
            width 44px
            height 44px

@media screen and (max-width: 786px) 
    main 
        section.icons-content 
            height auto
            .icons-preview
                width auto
                margin 0 20px
                .other-shows
                    display none
                .preview-content
                    width 100%
@media screen and (max-width: 480px)
    #detail-overlay 
        #detail-content
            padding 20px 0
    section.sec-rel ul.hasicons li
        min-width 130px
    main 
        section.icons-content .info-operate
            padding 0 10px