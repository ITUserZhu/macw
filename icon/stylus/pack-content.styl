@import 'components/icons-item';
@import 'content';
@import 'media/pack-content';

.bg-placeholder {
	height: 200px;
	background-color: transparent;
	overflow: hidden;
	img {
		height: 100%;
		margin-left: 50%;
		transform: translateX(-50%);
		opacity: 0.1;
	}
}

.breakcrumbs {
	max-width: unset;
	margin: -200px 100px 0;
	position: relative;
	color: #666;
	z-index: 2;
}

.pack-content {
	margin: 0 100px;
	position: relative;
	z-index: 2;
	.pack-info {
		margin-top: 35px;
		h1 {
			display: inline-block;
			font-size: 24px;
			margin-right: 25px;
		}
		span {
			padding: 0px 10px;
			background-color: theme_color;
			color: #fff;
		}
		p em {
			margin-left: 10px;
			i {
				display: inline-block;
				vertical-align: top;
				width: 20px;
				height: 20px;
				margin: 0 5px;
				background-image: url('/assets/images/rec-soft.png');
				background-position: 0 0;
				for num in 1 2 3 4 {
					&:nth-child({num + 1}) {
						background-position: 0 -20px * num;
					}
				}
			}
		}
	}
	.pack-filter {
		border-radius: 5px;
		background-color: #fff;
		padding: 15px 20px 0;
		margin-top: 20px;
		box-shadow: 0 -8px 8px 0 rgba(0, 0, 0, 0.1);
		.filter-wrap {
			line-height: 40px;
			display: flex;
			justify-content: space-between;
			.filter-item {
				font-size: 16px;
				& > a {
					color: #999;
					margin: 0 15px;
					padding: 3px 0;
					border-bottom: 1px solid transparent;
					&.active {
						color: theme_color;
						border-bottom-color: theme_color;
					}
				}
				.show-type {
					display: inline-block;
					span {
						color: #ddd;
						font-size: 20px;
						margin: 0 5px;
						vertical-align: middle;
						cursor: pointer;
						&.active {
							color: #666;
						}
					}
				}
				.down-package {
					display: inline-block;
					width: 150px;
					height: 40px;
					border-radius: 5px;
					background-color: theme_color;
					text-align: center;
					color: #fff;
					margin-left: 10px;
					cursor: pointer;
				}
			}
			form {
				width: 200px;
				height: 30px;
				line-height: 30px;
				font-size: 0;
				position: relative;
				margin-left: 20px;
				display: inline-block;
				input {
					width: 100%;
					height: 100%;
					padding: 0 30px;
					background-color: rgba(113, 115, 247, 0.1);
					border-radius: 15px;
				}
				button, a {
					position: absolute;
					width: 30px;
					height: 30px;
					line-height: 30px;
					top: 0;
					text-align: center;
					color: #999;
					font-size: 14px;
				}
				button {
					left: 0;
					cursor: pointer;
					i {
						vertical-align: middle;
					}
				}
				a {
					right: 0;
				}
			}
		}
	}
	.hasicons {
		icons();
	}
}

.rel-shadow {
	width: 100%;
	height: 20px;
	box-shadow: 0 10px 8px 0 rgba(177, 177, 177, 0.1);
}

.rel-gather {
	margin-top: 30px;
	max-width: 1230px;
	margin: 0 auto;
	h2 {
		text-align: center;
		font-size: 24px;
		line-height: 2;
		margin: 20px 0 10px;
	}
	ul {
		icons-item();
	}
}