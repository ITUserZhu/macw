@import 'components/common'
@import 'components/hasicons'
@import 'components/renew'
@import 'components/lottery'

ycolor = #ffcb16

main 
    width 1200px
    margin 90px auto 50px

.user-aside
    float left
    width 200px
    margin-right 50px
    .user-info
        box-shadow 0 0 10px 0 rgba(0,0,0,.1)
        text-align center
        padding 20px
        .heading
            width 100px
            height 100px
            border-radius 50%
            margin -70px auto 10px
            overflow hidden
            img 
                height 100%
                margin-left 50%
                transform translateX(-50%)
        .nickname
            font-size 18px
            line-height 32px
            color #666
            text_ovh()
        .userid
            color ycolor
            font-size 12px
        button 
            background-color theme_color
            color #fff
            width 80px
            height 26px
            border-radius 3px
            margin 30px 0 15px
            cursor pointer
        .vip-type
            p  
                color ycolor
            span  
                color #999999
                font-size 12px
        .point-left
            margin-top 20px
            span 
                color ycolor    
    .user-menu
        margin-top 20px
        padding 20px 20px 80px
        box-shadow 0 0 10px 0 rgba(0,0,0,.1)
        ul 
            li 
                line-height 40px
                color #999
                &.menu-download
                    p::after 
                        display none
                &.active
                    .child-nav 
                        display block
                    p 
                        &::after 
                            transform rotate(90deg)
                            border-left-color theme_color
                        span
                        a 
                            color theme_color
                .child-nav 
                    display none
                    span
                    a  
                        display block
                        padding 0 20px
                        color #999
                        cursor pointer
                        &.active 
                            color theme_color
                i  
                    margin-right 5px
                a  
                    color #999
                p  
                    padding 0 10px
                    border-bottom 1px solid #eee
                    position relative
                    &::after 
                        content ""
                        position absolute 
                        top 50%
                        margin-top -4px
                        right 10px 
                        border-left 8px solid #999
                        border-top 5px solid transparent
                        border-bottom 5px solid transparent
.user-article
    float right
    width 950px
    min-height 700px   
    .no-data
        color #999
        font-size 16px
        text-align center
        margin-top 30px 
        width 100%    
    section
        display none
        &.active
            display block
        & > div 
            display none
            &.active 
                display block
        &.personal-info
            .perindex
                .vip-info
                    display flex
                    margin-bottom 20px
                    dl
                        flex 1
                        max-width 300px
                        height 124px
                        margin-right 25px
                        box-shadow 0 0 10px 0 rgba(0,0,0,.1)
                        text-align center
                        padding-top 15px
                        &:last-child 
                            margin-right 0
                            p  
                                line-height 2
                        .d-title 
                            font-size 18px
                        .point-num
                            color ycolor
                            font-size 22px
                        a
                        button 
                            width 100px
                            height 30px
                            line-height 30px
                            color #fff
                            border-radius 5px
                            display block 
                            margin 5px auto
                            background-color theme_color
                            cursor pointer
                        a 
                            margin-top 20px
                        span 
                            color #999
                .per-h
                    line-height 40px
                    border-bottom 1px solid #eee
                    padding 0 10px
                    h2  
                        display inline-block
                        font-size 16px
                    a  
                        float right
                        color theme_color
                .hasicons
                    icons()
                    margin 20px 0
                .nocollect
                    line-height 6 
                    color #999
                    text-align center
                    font-size 16px
            .userinfo
                width 500px 
                margin 0 auto
                label 
                    display block
                    line-height 40px 
                    margin-top 20px 
                    position relative
                    span 
                        display inline-block
                        width 100px 
                        text-align right
                        color #666
                        margin-right 10px 
                    input, select 
                        outline none
                        border 1px solid #f4f4f4
                        width 320px 
                        border-radius 5px 
                        background-color transparent 
                        padding 0 20px 
                        box-sizing border-box
                        height 40px
                        &::placeholder
                            color #999
                    input:read-only
                        background-color #F9F9F9
                    textarea 
                        height 100px
                        resize none
                        border-radius 5px
                        border 1px solid #f4f4f4
                        padding 10px 20px
                        width 320px
                        vertical-align top
                        outline none
                        font-size 14px
                    &.phone
                        em 
                            color #239FFF
                            text-decoration underline
                            cursor pointer
                            margin-left 5px
                    &.citylabel
                        select 
                            width 200px 
                            margin-right 20px
                button 
                    display block
                    margin 0 auto 
                    width 100px 
                    outline none
                    background-color #353535
                    font-size 16px 
                    margin-top 20px 
                    border-radius 5px 
                    border none 
                    color #eee 
                    height 40px
                    cursor pointer
                    &.disabeld 
                        background-color #ccc
                        cursor no-drop
        &.sec-collect
            .collect-info
                .col-num
                    font-size 18px
                .collect-operate
                    color #666666
                    span
                        margin-left 20px
                        cursor pointer
                    i 
                        font-size 16px
                        margin-right 5px      
            .hasicons
                icons()
                li .mask 
                    .operate
                        background-color #F4F4F4
                        i 
                            font-size 18px
                            color #999
                            line-height 30px
                margin 20px 0
                li .mask .operate .operate-btn 
                    .addshop
                        display none
                    .delshop
                        display inline-block
        &.sec-download
            .download-filter
                line-height 30px
                height 30px 
                text-align right
                span 
                    color #999 
                    margin-right 10px
                select  
                    background-color theme_color
                    width 150px
                    height 30px
                    border-radius 5px
                    padding-left 20px   
                    outline none
                    color #fff
                    border none
            .hasicons
                icons()
                margin 20px 0
        &.vip-center
            .recharge-list
                .recharge-filter
                    text-align right
                    margin-bottom 20px
                    select
                        background-color theme_color
                        width 150px
                        height 30px
                        border-radius 5px
                        padding-left 20px   
                        outline none
                        color #fff
                        border none
                table 
                    width 100%
                    thead 
                        background-color #F4FCFE
                        tr 
                            height 40px
                            color #999
                            font-size 16px 
                            th 
                                font-weight 400	
                                text-align left
                                text-indent 10px
                    tbody
                        tr 
                            height 40px 
                            border-bottom 1px solid #F1F1F1
                            td 
                                color #666
                                padding 10px
                                &:last-child
                                    padding 10px 20px
                                a 
                                    color #1398ff
                                    margin-left 5px
                                    text-decoration underline
            .coupon-list
                .coupon-filter
                    text-align right
                    margin-bottom 20px
                    select
                        background-color theme_color
                        width 150px
                        height 30px
                        border-radius 5px
                        padding-left 20px   
                        outline none
                        color #fff
                        border none
                ul 
                    li 
                        float left
                        width 260px
                        height 120px
                        background linear-gradient(135deg, #7173F7, #4a68fa)
                        border-radius 5px
                        overflow hidden
                        color #fff
                        padding 20px
                        cursor pointer
                        margin-right 85px
                        margin-bottom 40px
                        position relative
                        &:nth-child(3n)
                            margin-right 0
                        &.over 
                            background linear-gradient(135deg, #ccc, #969696)
                            .over-text 
                                opacity 1
                        .over-text
                            width 50px
                            height 20px
                            text-align center
                            line-height 18px
                            color #fff
                            border 1px solid #ddd
                            position absolute
                            right 4px
                            top 16px
                            transform rotate(35deg)
                            font-size 12px
                            opacity 0
                        .coupon-info
                            .min-price
                                margin-top 15px
                                font-size 16px
                        .coupon-price
                            em  
                                vertical-align top
                                display inline-block
                            span 
                                font-size 60px
        &.news-center
            .sys-info
                table 
                    width 100%
                    text-align center
                    thead 
                        background-color #F4FCFE
                        tr 
                            height 40px
                            color #999
                            font-size 16px 
                            th 
                                font-weight 400	
                                text-align left
                                text-indent 10px
                    tbody
                        tr 
                            height 40px 
                            border-bottom 1px solid #F1F1F1
                            td 
                                color #666
                                padding 10px
                                &:first-child
                                    i  
                                        display none
                                        &:nth-child(1)
                                            display inline-block
                                &.active
                                    i:nth-child(1)
                                        display none
                                    i:nth-child(2)
                                        display inline-block
                                &:last-child
                                    padding 10px 30px
                                a 
                                    color #1398ff
                                    margin-left 5px
                                    text-decoration underline
            .user-request
                form 
                    fieldset 
                        height auto 
                        line-height 40px
                        margin-bottom 40px
                        &:first-child 
                            margin-bottom 20px
                        label 
                            margin-left 30px
                            margin-right 0
                            &:nth-child(2)
                                margin-left 0
                        input[type=radio]
                            margin-right 5px
                        input[type=url]
                            width calc(100% - 80px)
                            height 40px
                            border-radius 5px
                            padding 0 10px
                            border 1px solid #D8D8D8
                        textarea 
                            width calc(100% - 80px)
                            outline none
                            border 1px solid #D8D8D8
                            padding 10px
                            resize none
                            height 200px
                            border-radius 5px
                            vertical-align top
                            font-size 14px
                            color #666
                    button
                        float right
                        width 150px
                        height 40px
                        background-color theme_color
                        color #fff
                        border-radius 5px
                        font-size 16px
                        cursor pointer
                    .news-tips
                        color red  
                        margin-left 75px
    .ajax-pagination
        text-align center		
        margin 30px 0
        a 
            display inline-block	
            margin 0 8px 	
        .num 
            height 30px 
            line-height 30px
            padding 0 5px
            box-sizing border-box 
            min-width 30px
            border-radius 15px 
            &.active 
                background-color theme_color
                color #fff                        
.shop-form
    label 
        display block
        font-weight bold
    input 
        width 100%
        height 34px
        padding 0 10px
        margin-top 6px
        border 1px solid #eee
        color #666666
        border-radius 4px
        box-shadow inset 0 1px 1px rgba(0,0,0,.075)                