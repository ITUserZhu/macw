@import 'gather';

.gather-list {
	.gather-info {
		text-align: center;
		margin-bottom: 20px;
		h1 {
			margin-bottom: 10px;
		}
	}
	.icons-list li .con .title {
		text-align: center;
		color: #999;
		text-decoration: underline;
		width: 100%;
	}
	ol.styles {
		display: flex;
		justify-content: space-between;
		margin-bottom: 20px;
		li {
			width: 80px;
			height: 80px;
			border-radius: 50%;
			background-color: #fff;
			text-align: center;
			box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1);
			border: 2px solid transparent;
			overflow: hidden;
			&.active {
				border-color: theme_color;
				background-color: #eee;
				p {
					color: #333;
				}
			}
			a {
				display: block;
				width: 100%;
				height: 100%;
			}
			img {
				width: 20px;
				height: 20px;
				margin-top: 16px;
			}
			p {
				margin-top: 5px;
				color: #666;
			}
		}
	}
}