{% extends 'inc/base.twig' %}
{% import "components/index.twig" as component %}

{% block css %}
  <link rel="stylesheet" href="css/topic-list.min.css">
{% endblock %}

{% block content %}
  <main>
    {{ component.topic_nav(soft_nav, plugin_nav, template_nav, wallpaper_nav, article_nav, cate_info, category_data, article_nav, 'lwz') }}
    <section class="list-wrap">
      <div class="list-box">
        {{ component.topic_article(special_info) }}
      </div>
    </section>
    <input type="hidden" id="topic-infos"
           data-id="{{ id }}"
           data-total="{{ special_count }}"
           data-type="article_special"
    >
  </main>
{% endblock %}

{% block script %}
  <script src="js/topic-list.min.js"></script>
{% endblock %}
