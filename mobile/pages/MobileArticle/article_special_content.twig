{% extends 'inc/base.twig' %}
{% import "components/index.twig" as component %}

{% block css %}
  <link rel="stylesheet" href="css/topic-content.min.css">
{% endblock %}

{% block content %}
  <main>
    <section class="topic-info">
      <h1>{{ info.title }}</h1>
      <p class="desc">{{ info.description }}</p>
      <p class="info">
        <span>共{{ special_count }}篇文章</span>
        <span>时间：{{ info.create_time | date('Y.m.d') }}</span>
      </p>
    </section>
    <section class="topic-content">
      {{ component.article(content_info) }}
    </section>
  </main>
{% endblock %}


