{% extends 'inc/base.twig' %}
{% import "components/index.twig" as component %}

{% block css %}
<link rel="stylesheet" href="css/index.min.css">
{% endblock %}

{% block content %}
<main>
  <section class="newest-soft">
    <div class="sec-title">
      <h2>最新软件</h2>
    </div>
    {{ component.soft(mac_newest) }}
  </section>
  <section class="boutique-app">
    <div class="sec-title">
      <h2>精品应用</h2>
    </div>
    {{ component.soft(mac_newest_recommend) }}
  </section>
  <section class="newest-video">
    <div class="sec-title">
      <h2>最新视频</h2>
      <a href="/v/" class="fr"><i class="icon-arrow"></i></a>
    </div>
    {{ component.video(video_newest) }}
  </section>
  <section class="newest-material">
    <div class="sec-title">
      <h2>最新素材</h2>
      <a href="/sc/" class="fr"><i class="icon-arrow"></i></a>
    </div>
    {{ component.wallpaper(material_newest) }}
  </section>
  <section class="boutique-plugin">
    <div class="sec-title">
      <h2>最新插件</h2>
      <a href="/cjlist/" class="fr"><i class="icon-arrow"></i></a>
    </div>
    {{ component.plugin(plugin_newest) }}
  </section>
  <section class="boutique-plugin">
    <div class="sec-title">
      <h2>最新模板</h2>
      <a href="/mblist/" class="fr"><i class="icon-arrow"></i></a>
    </div>
    {{ component.template(template_newest) }}
  </section>
  <section class="boutique-wallpaper">
    <div class="sec-title">
      <h2>最新壁纸</h2>
      <a href="/dlist/" class="fr"><i class="icon-arrow"></i></a>
    </div>
    {{ component.wallpaper(wallpaper_newest) }}
  </section>
  <section class="newest-article">
    <div class="sec-title">
      <h2>最新教程</h2>
      <a href="/nlist/" class="fr"><i class="icon-arrow"></i></a>
    </div>
    {{ component.article(article_newest) }}
  </section>
  <section class="rank-soft">
    <div class="sec-title">
      <h2>软件排行榜</h2>
      <a href="/rank/" class="fr"><i class="icon-arrow"></i></a>
    </div>
    <div class="rank-soft-wrap">
      <ul>
        {% for item in mac_rank %}
        <li>
          <a href="{{ item.url }}" title="{{ item.title }}">
            <div class="img">
              <img src="{{ item.thumb }}" alt="{{ item.title }}">
            </div>
            <p class="title">{{ item.title }}</p>
          </a>
        </li>
        {% endfor %}
      </ul>
    </div>
  </section>
</main>
{% endblock %}

{% block script %}
<script src="js/index.min.js"></script>
{% endblock %}	