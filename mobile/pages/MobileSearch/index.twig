{% extends 'inc/base.twig' %}
{% import "components/index.twig" as component %}

{% block css %}
  <link rel="stylesheet" href="css/search.min.css">
{% endblock %}

{% block header %}
  <div class="header-search">
    <form>
      <button><i class="icon-search"></i></button>
      <input type="text" placeholder="请您输入想要搜索的词或关键字">
      <input type="hidden" name="type" value="mac">
    </form>
    <div class="cancel">取消</div>
  </div>
{% endblock %}

{% block content %}
  <main>
    <section class="search-history">
      <div class="title-del">历史搜索
        <span class="del-history fr">删除历史</span>
      </div>
      <div class="history-box">

      </div>
      <p class="no-history">暂无历史记录</p>
    </section>
    {% if first_mac %}
    <section class="boutique-soft">
      <h2>精品软件</h2>
      {{ component.soft(first_mac) }}
      <a class="sec-more " href="/list/">更多</a>
    </section>
    {% endif %}
  </main>
{% endblock %}

{% block script %}
  <script src="js/search.min.js"></script>
{% endblock %}
