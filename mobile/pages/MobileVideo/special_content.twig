{% extends 'inc/base_video.twig' %}
{% import "components/video.twig" as component %}

{% block css %}
  <link rel="stylesheet" href="css/video-topic-content.min.css">
{% endblock %}

{% block content %}
  <main>
    <section class="topic-info">
      <h1>{{ info.title }}</h1>
      <p class="desc">{{ info.description }}</p>
      <p class="info">
        <span>时间：{{ info.create_time | date('Y.m.d') }}</span>
      </p>
    </section>
    <section class="topic-content">
      {{ component.video(content_info) }}
    </section>
  </main>
{% endblock %}
