{% extends 'inc/base.twig' %}
{% import "components/nav.twig" as nav %}

{% block header %}
  <header>
    <div class="head">
      <div class="logo fl"><a href="/">
          <img src="/assets/images/logo.png">
        </a></div>
      <div class="head-other fr">
        {% block search %}
          <a href="/plist/"><i class="icon-search"></i></a>
        {% endblock %}
        <span id="menu"><i class="icon-menu"></i></span>
      </div>
      <div class="fix-nav">
        <div class="nav-wrap">
          <img src="/assets/images/icon.png">
          {{ nav.material_nav(active) }}
        </div>
      </div>
    </div>
    <nav>
      {{ nav.material_nav(active) }}
    </nav>
  </header>
{% endblock %}