{% extends 'inc/base.twig' %}
{% import "components/index.twig" as component %}

{% block css %}
<link rel="stylesheet" href="css/necessary-install.min.css">
{% endblock %}

{% block content %}
<main>
  <div class="container">
    <div class="breadcrumbs">
      <a href="/">首页</a>
      &gt; <span>装机必备</span>
    </div>
    <section class="list-nav">
      <div class="list-nav_cate">
        <span>分类：</span>
        <div class="list-nav_links">
          {% for item in year_data %}
          <a href="/necessary/{{ item }}_1.html" {% if item == year_now %} class="active"
            {% endif %}>{{ item }}年每月推荐应用</a>
          {% endfor %}
        </div>
      </div>
      <div class="list-nav_cate">
        <span>月份：</span>
        <div class="list-nav_links">
          {% for item in month_data %}
          <a href="/necessary/{{ year_now }}_{{ item }}.html" {% if item == month_now %} class="active"
            {% endif %}>{{ item }}月份</a>
          {% endfor %}
        </div>
      </div>
    </section>
    <section class="necessary">
      {% for item in cate_info %}
      {% if item.model_id == 20 %}
      <h2><img src="{{ item.thumb }}">{{ item.cate_name }}</h2>
      <ul class="wallpaper clearfix">
        {{ component.wallpaper(item.data) }}
      </ul>
      {% elseif item.model_id == 18 %}
      <h2><img src="{{ item.thumb }}">{{ item.cate_name }}</h2>
      <ul class="video clearfix">
        {{ component.video_list(item.data) }}
      </ul>
      {% elseif item.model_id == 19 %}
      <h2><img src="{{ item.thumb }}">{{ item.cate_name }}</h2>
      <ul class="template clearfix">
        {{ component.template(item.data) }}
      </ul>
      {% elseif item.model_id == 17 %}
      <h2><img src="{{ item.thumb }}">{{ item.cate_name }}</h2>
      <ul class="plugin clearfix">
        {{ component.plugin(item.data) }}
      </ul>
      {% else %}
      <h2><img src="{{ item.thumb }}">{{ item.cate_name }}</h2>
      <ul class="soft clearfix">
        {{ component.necessary(item.data) }}
      </ul>
      {% endif %}
      {% endfor %}
    </section>
  </div>
</main>
{% endblock %}

{% block script %}
<script src="js/necessary-install.min.js"></script>
{% endblock %}