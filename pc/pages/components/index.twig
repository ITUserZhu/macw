<!-- 插件 -->
{% macro plugin(data) %}
{% for i,item in data %}
<li>
	<a href="{{ item.url }}" title="{{ item.title | striptags }}">
		{% if i % 2 == 0 %}
		<div class="img-wrap">
			<div class="img">
				<img src="{{ item.thumb }}" alt="{{ item.title | striptags }}">
			</div>
		</div>
		<div class="con">
			<p class="title">{{ item.title | raw }}</p>
			<span class="btn">立即下载 &gt;</span>
		</div>
		{% else %}
		<div class="con">
			<p class="title">{{ item.title | raw }}</p>
			<span class="btn">立即下载 &gt;</span>
		</div>
		<div class="img-wrap">
			<div class="img">
				<img src="{{ item.thumb }}" alt="{{ item.title | striptags }}">
			</div>
		</div>
		{% endif %}
	</a>
</li>
{% endfor %}
{% endmacro %}

