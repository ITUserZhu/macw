{% endfor %}
{% endmacro %}

<!-- 视频列表 -->
{% macro video_list(data, type) %}
  {% for i,item in data %}
    <li data-src="{{ item.preview_url }}">
      <a href="{{ item.url }}" title="{{ item.title }}">
        <div class="img">
          <img src="{{ item.thumb }}" alt="{{ item.title }}">
        </div>
        <div class="con">
          <p class="title">{{ item.title }}</p>
          <p>
            {% if type %}
              <em class="{{ type }}">{{ type == 'ae'? 'AE模板': type == 'pr'? 'PR模板': '视频素材' }}</em>
            {% else %}
              <em class="{{ item.type }}">{{ item.cate_name }}</em>
            {% endif %}
            <span><i class="icon-video"></i>{{ item.time }}</span>
          </p>
        </div>
      </a>
    </li>
  {% endfor %}
{% endmacro %}

