<!-- 多种模板 -->
{% macro templates(data) %}
  {% for item in data %}
    {% if item.type == 'ppt' %}
    <li class="ppt"><a href="{{ item.url }}" title="{{ item.title }}">
        <div class="img"><img src="{{ item.thumb }}" alt="{{ item.title }}"></div>
        <div class="mask">
          <button>立即下载</button>
          <p class="title">{{ item.title }}</p>
        </div>
      </a></li>
    {% elseif item.type == 'word' %}
    <li class="word">
      <a href="{{ item.url }}" title="{{ item.title | striptags }}">
        <div class="img-wrap">
          <div class="mask">
            <button>立即下载</button>
          </div>
          <div class="img"><img src="{{ item.thumb }}" alt="{{ item.title | striptags }}"></div>
        </div>
        <p class="title">{{ item.title | raw }}</p>
      </a>
    </li>
    {% elseif item.type == 'excel' %}
    <li class="excel"><a href="{{ item.url }}" title="{{ item.title }}">
        <div class="img"><img src="{{ item.thumb }}" alt="{{ item.title }}"></div>
        <div class="mask">
          <p class="type"><img src="/assets/images/exc-logo.png">{{ item.pretitle }}</p>
          <button>立即下载</button>
          <p class="title">{{ item.title }}</p>
        </div>
      </a></li>
    {% else %}
    <li class="template">
      <a href="{{ item.url }}" title="{{ item.title | striptags }}">
        <div class="img-wrap">
          <div class="img {% if item.type == 'uncut' %}uncut{% endif %}">
            <img src="{{ item.thumb }}" alt="{{ item.title | striptags }}">
          </div>
        </div>
        <div class="con">
          <p class="title">{{ item.title | raw }}</p>
          <span class="btn">下载</span>
        </div>
      </a>
    </li>
    {% endif %}
  {% endfor %}
{% endmacro %}

