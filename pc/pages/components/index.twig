<!-- 软件 -->
{% macro soft(data) %}
{% for item in data %}
<li>
	<a href="{{ item.url }}" title="{{ item.title | striptags }}">
		<div class="img-wrap">
			<div class="bg"><img src="{{ item.thumb }}" alt="{{ item.title | striptags }}"></div>
			<div class="img">
				<img src="{{ item.thumb }}" alt="{{ item.title | striptags }}">
			</div>
		</div>
		<div class="con">
			<p class="title">{{ item.title | raw }}</p>
			<p class="version">{{ item.version }}</p>
			<span class="time">
				<i class="icon-times"></i>
				{{ item.update_time }}</span>
		</div>
	</a>
</li>
{% endfor %}
{% endmacro %}

<!-- 模板 -->
{% macro template(data, hastype = false) %}
{% for item in data %}
<li>
	<a href="{{ item.url }}" title="{{ item.title | striptags }}">
		<div class="img-wrap">
			{% if hastype %}
			<div class="type">
				<span>Lr预设</span>
			</div>
			{% endif %}
			<div class="img">
				<img src="{{ item.thumb }}" alt="{{ item.title | striptags }}">
			</div>
		</div>
		<div class="con">
			<p class="title">{{ item.title | raw }}</p>
			<span class="btn">下载</span>
		</div>
	</a>
</li>
{% endfor %}
{% endmacro %}

