<!-- 专题软件 -->
{% macro topics(data) %}
{% for item in data %}
<li><a href="{{ item.url }}" title="{{ item.title }}">
		<div class="imgs">
			{% for v in item.thumb_arr %}
			<img src="{{ v }}">
			{% endfor %}
		</div>
		<p class="title">{{ item.title }}</p>
		<p class="desc">{{ item.description }}</p>
	</a></li>
{% endfor %}
{% endmacro %}

<!-- 壁纸 -->
{% macro wallpaper(data) %}
{% for item in data %}
<li>
	<a href="{{ item.url }}" title="{{ item.title | raw }}">
		<div class="imgs">
			<div class="img-cover">
				<img src="{{ item.multi_map[0] }}" alt="{{ item.title | striptags }}">
			</div>
			<div class="img-array">
				{% for v in item.multi_map %}
				<img data-src="{{ v }}">
				{% endfor %}
			</div>
		</div>
		<div class="con">
			<p class="title">{{ item.title | raw }}</p>
		</div>
	</a>
</li>
{% endfor %}
{% endmacro %}

<!-- 装机必备 -->
{% macro necessary(data) %}
{% for item in data %}
<li><a href="{{ item.url }}" title="{{ item.title }}">
		<p class="title">{{ item.title }}</p>
		<p class="version">{{ item.version }}</p>
		<div class="con">
			<div class="img"><img src="{{ item.thumb }}" alt="{{ item.title }}"></div>
			<p class="desc">{{ item.description }}</p>
		</div>
		<p class="infos">
			<span>时间：{{ item.update_time | date('Y-m-d') }}</span>
			{% if item.file_size %}
			<span>大小：{{ item.file_size }}</span>
			{% endif %}
			{% if item.systems %}
			<span>系统：{{ item.systems }}</span>
			{% endif %}
		</p>
	</a></li>
{% endfor %}
{% endmacro %}