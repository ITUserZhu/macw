{# 用来替换[dl]模型id-id[/dl]模板 #}
<div class="dl-soft">
  <a href="{{ dl.url }}" title="{{ dl.title }} {{ dl.version }}" target="_blank">
    <div class="img"><img src="{{ dl.thumb }}" alt="{{ dl.title }}"></div>
    <div class="con">
      <p class="title">{{ dl.title }} {{ dl.version }}</p>
      <p class="desc">{{ dl.description }}</p>
      <p class="infos">
        <span>大小：{{ dl.file_size }}</span>
        <span>时间：{{ dl.update_time | date('Y-m-d') }}</span>
        <span>系统：{{ dl.systems }}</span>
      </p>
      <button>立即下载</button>
    </div>
  </a>
</div>