<!-- 素材列表 -->
{% macro list(data, original = false) %}
{% for v in data %}
<li data-id="{{ v.id }}" data-w="{{ v.width }}" data-h="{{ v.height }}">
  {% if v.atlas_url %}
  <a href="{{ v.atlas_url }}" target="_blank" class="atlas-link">图集</a>
  {% endif %}
  <a href="{{ v.url }}" title="{{ v.title }}">
    <div class="img">
      <img {% if original %}data-{% endif %}src="{{ v.thumb }}" alt="{{ v.title }}">
    </div>
    <div class="mask">
      <div class="mask-operate">
        <button class="collect"><i class="icon-collect"></i></button>
        <button class="shopping"><i class="icon-shop"></i></button>
        <button class="down"><i class="icon-download"></i></button>
      </div>
    </div>
  </a>
</li>
{% endfor %}
{% endmacro %}

<!-- 专题列表 -->
{% macro topic(data) %}
{% for item in data %}
<li><a href="{{ item.url }}">
    <div class="img">
      <img src="{{ item.thumb | default(item.info[0].thumb) }}" alt="{{ item.title }}">
      <div class="mask"><span>进入专题 &gt;</span></div>
    </div>
    <p class="title">{{ item.title }}</p>
  </a></li>
{% endfor %}
{% endmacro %}